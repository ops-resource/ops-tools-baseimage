<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata>
        <id>Ops.Tools.BaseImage.Windows</id>
        <version>$VersionSemantic$</version>
        <authors>$CompanyName$</authors>
        <owners>$CompanyName$</owners>
        <licenseUrl>http://www.apache.org/licenses/LICENSE-2.0</licenseUrl>
        <projectUrl>$CompanyUrl$</projectUrl>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>
            Provides scripts and cookbooks used to create a base image for a windows machine.
        </description>
        <releaseNotes>
            $ReleaseNotesHtmlEncoded$
        </releaseNotes>
        <dependencies>
            $Dependencies$
        </dependencies>
    </metadata>
    <files>
        <file
            src="$DirSrc$\scripts\windows\**\*.*"
            target="scripts" />
        <file
            src="$DirSrc$\cookbooks\ops-tools-baseimage-windows\**\*"
            exclude="$DirSrc$\cookbooks\ops-tools-baseimage-windows\metadata.rb"
            target="cookbooks\ops-tools-baseimage-windows" />
        <file
            src="$DirTemp$\metadata.rb"
            target="cookbooks\ops-tools-baseimage-windows" />

        <file
            src="$DirWorkspace$\README.md" />
        <file
            src="$DirWorkspace$\LICENSE" />
    </files>
</package>
