<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata>
        <id>Ops.Tools.BaseImage.Linux</id>
        <version>$VersionSemantic$</version>
        <authors>$CompanyName$</authors>
        <owners>$CompanyName$</owners>
        <licenseUrl>http://www.apache.org/licenses/LICENSE-2.0</licenseUrl>
        <projectUrl>$CompanyUrl$</projectUrl>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>
            Provides scripts and cookbooks used to create a base image for a linux machine.
        </description>
        <releaseNotes>
            $ReleaseNotesHtmlEncoded$
        </releaseNotes>
        <dependencies>
            $Dependencies$
        </dependencies>
    </metadata>
    <files>
        <file
            src="$DirSrc$\linux\ubuntu\preseed\*.*"
            target="ubuntu\preseed" />
        <file
            src="$DirSrc$\linux\ubuntu\scripts\*.*"
            target="ubuntu\scripts" />

        <file
            src="$DirWorkspace$\README.md" />
        <file
            src="$DirWorkspace$\LICENSE" />
    </files>
</package>
